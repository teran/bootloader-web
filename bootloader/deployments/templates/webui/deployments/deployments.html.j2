{% extends 'webui/deployments/layout.html.j2' %}

{% block content %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <div class="modal fade" tabindex="-1" role="dialog" id="deployment-create-form-modal">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title">Add profile</h4>
                </div>
                <div class="modal-body">
                  <p>
                    <form method="post">
                      {% csrf_token %}
                      <div class="form-group">
                        <label for="server-field">Server</label>
                        <select name="server-field" id="server-field">
                          {% for server in servers %}
                          <option value="{{ server.pk }}">{{ server }}</option>
                          {% endfor %}
                        </select>
                        <p class="help-block">Server to setup deployment on</p>

                        <label for="profile-field">Profile</label>
                        <select name="profile-field" id="profile-field">
                          {% for profile in profiles %}
                          <option value="{{ profile.pk }}">{{ profile }}</option>
                          {% endfor %}
                        </select>
                        <p class="help-block">Profile to use</p>
                      </div>
                    </form>
                  </p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Create deployment</button>
                </div>
              </div>
            </div>
          </div>
          <div>
            <button class="btn btn-success btn-xs modal-action-button" modal-id="deployment-create-form-modal" modal-action="show">
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              Create deployment
            </button>
          </div>
          <table class="table">
            <tr>
              <th>Server</th>
              <th>Profile</th>
              <th>Controls</th>
            </tr>
            {% for server in servers %}
            <tr>
              <td><a href="{{ server.link_webui }}">{{ deployments.server }}</a></td>
              <td>{{ deployments.profile }}</td>
              <td>
                {% if server.ipmi_host and server.ipmi_browser_proto %}
                <a href="{{ server.link_ipmi_web }}" class="btn btn-info btn-xs" target="_blank">
                  <span class="glyphicon glyphicon-modal-window" aria-hidden="true"></span>
                  IPMI
                </a>
                {% endif %}
                <a class="btn btn-warning btn-xs" href="{{ server.link_webui_edit }}">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit
                </a>
                <button type="button" class="btn btn-danger btn-xs object-action-button" object-id="{{ server.pk }}" object-name="{{ server.fqdn }}" object-type="server" object-action="delete" action-method="DELETE" post-action-url="/servers/index.html">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> delete
                </button>
              </td>
            </tr>
            {% endfor %}
          </table>
        </div>
{% endblock %}
