{% extends 'webui/servers/layout.html.j2' %}

{% block content %}
        <input type="hidden" id="post-action-url" name="post-action-url" value="/servers/index.html">

        <!-- Modal -->


        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <table class="table">
            <tr>
              <th>Server FQDN</th>
              <th>Location</th>
              <th>Controls</th>
            </tr>
            {% for server in servers %}
            <tr>
              <td><a href="/servers/{{ server.pk }}/{{ server.fqdn }}.html">{{ server.fqdn }}</a></td>
              <td>{{ server.location.name }}</td>
              <td>
                {% if server.ipmi_browser_proto and server.ipmi_host and server.ipmi_browser_port %}
                <a type="button" class="btn btn-info btn-xs" href="{{ server.ipmi_browser_proto }}://{{ server.ipmi_host }}:{{ server.ipmi_browser_port }}">
                  <span class="glyphicon glyphicon-modal-window" aria-hidden="true"></span> IPMI
                </a>
                {% endif %}
                <a class="btn btn-warning btn-xs" href="/server/{{ server.pk }}/{{ server.fqdn }}/edit.html">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit
                </a>
                <button type="button" class="btn btn-danger btn-xs delete-object" object-id="{{ server.pk }}" object-name="{{ server.fqdn }}" object-type="server">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> delete
                </button>
              </td>
            </tr>
            {% endfor %}
          </table>
        </div>
{% endblock %}
