{% extends 'webui/servers/layout.html.j2' %}

{% block content %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <table class="table">
            <tr>
              <th>Server FQDN</th>
              <th>Location</th>
              <th>Controls</th>
            </tr>
            {% for server in servers %}
            <tr>
              <td><a href="{{ server.link_webui }}">{{ server.fqdn }}</a></td>
              <td>{{ server.location.name }}</td>
              <td>
                {% if server.ipmi_host and server.ipmi_browser_proto %}
                <a href="{{ server.ipmi_browser_proto }}://{{ server.fqdn }}" class="btn btn-info" target="_blank">
                  <span class="glyphicon glyphicon-modal-window" aria-hidden="true"></span>
                  IPMI
                </a>
                {% endif %}
                <a class="btn btn-warning btn-xs" href="{{ server.link_webui_edit }}">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> edit
                </a>
                <button type="button" class="btn btn-danger btn-xs object-action-button" object-id="{{ server.pk }}" object-name="{{ server.fqdn }}" object-type="server" object-action="delete" action-method="DELETE" post-action-url="/servers/index.html">
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> delete
                </button>
              </td>
            </tr>
            {% endfor %}
          </table>
        </div>
{% endblock %}
