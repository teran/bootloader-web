{% extends 'webui/servers/layout.html.j2' %}

{% block content %}
          <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h3>{{ server.fqdn }}</h3>
            <div>{{ server.location }}</div>
            <div>
              <a href="ssh://{{ server.fqdn }}" class="btn btn-success" target="_blank">
                <span class="glyphicon glyphicon-console" aria-hidden="true"></span>
                SSH
              </a>
              {% if server.ipmi_host and server.ipmi_browser_proto %}
              <a href="{{ server.link_ipmi_web }}" class="btn btn-info" target="_blank">
                <span class="glyphicon glyphicon-modal-window" aria-hidden="true"></span>
                IPMI
              </a>
              {% endif %}
              <a href="{{ server.link_webui_edit }}" class="btn btn-warning">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                Edit
              </a>
              <a href="{{ server.link_api }}" class="btn btn-default" target="_blank">
                <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                JSON data
              </a>
            </div>
            <table class="table">
              <tr>
                <th>Interface name</th>
                <th>MAC address</th>
              </tr>
              {% for interface in server.interfaces.all %}
              <tr>
                <td>{{ interface.name }}</td>
                <td>{{ interface.mac }}</td>
              </tr>
              {% endfor %}
          </div>
{% endblock %}
